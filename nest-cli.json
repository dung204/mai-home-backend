{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src/modules",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "../base/database/scripts/**/*.sql",
        "outDir": "./dist/base/database/scripts",
        "watchAssets": true
      },
      {
        "include": "./email/templates/**/*.ejs",
        "outDir": "./dist/modules",
        "watchAssets": true
      }
    ]
  }
}
